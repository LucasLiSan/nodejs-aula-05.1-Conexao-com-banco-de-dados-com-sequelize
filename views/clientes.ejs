<%- include ('partials/header.ejs') %>
    <%- include ('partials/navbar.ejs') %>
<!--FORMULÁRIO DE CADASTRO-->
    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Cadastrar clientes</h1>
            </div>
            <div class="card-body">
                <form action="/clientes/new" method="POST">
                    <label for="nome">Nome do cliente:</label>
                    <input type="text" name="nome" placeholder="Insira o nome do cliente" class="form-control" required>
                    <label for="cpf">CPF do cliente:</label>
                    <input type="text" name="cpf" placeholder="Insira o CPF do cliente" class="form-control" required>
                    <label for="endereco">Endereço do cliente:</label>
                    <input type="text" name="endereco" placeholder="Insira o endereço do cliente" class="form-control" required>
                    <br>
                    <input type="submit" value="Cadastrar" class="btn btn-success">
                    <hr>
                </form>
            </div>
        </div>
    </div>
    <br>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h1>Clientes</h1>
                </div>
                <div class="card-body">
                    <table>
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nome:</th>
                                <th>CPF:</th>
                                <th>Endereço:</th>
                                <th style="text-align: center;" colspan="2">Ações:</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% clientes.forEach(cliente=> { %>
                                <tr>
                                    <td><img src="imgs/avatar.png" width="30px"></td>
                                    <td>
                                        <%= cliente.nome %>
                                    </td>
                                    <td>
                                        <%= cliente.cpf %>
                                    </td>
                                    <td>
                                        <%= cliente.endereco %>
                                    </td>
                                    <td><a style="color: #ffa500;" href="/clientes/edit/<%= cliente.id %>">Editar</a></td>
                                    <td><a style="color: #ff0000;" href="/clientes/delete/<%= cliente.id %>">Excluir</a></td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <%- include ('partials/footer.ejs') %>